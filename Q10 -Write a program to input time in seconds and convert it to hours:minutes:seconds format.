#include <stdio.h>

int main() {
    int seconds, hours, minutes;

    printf("Input 1:\n");
    scanf("%d", &seconds);

    hours = seconds / 3600;
    seconds = seconds % 3600;
    minutes = seconds / 60;
    seconds = seconds % 60;

    printf("Output 1:\n");
    printf("%d:%d:%d\n", hours, minutes, seconds);

    return 0;
}
---------------------------------------------------------------------
Input 1:
3661
Output 1:
1:1:1

Input 2:
7322
Output 2:
2:2:2

*/
