#include <stdio.h>

int main() {
    int n, i, sum = 0;

    printf("Enter a positive integer (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive number.\n");
    } else {
        for (i = 1; i <= n; ++i) {
            sum += i;
        }

        printf("The sum of the first %d natural numbers is: %d\n", n, sum);
    }

    return 0;
}
-------------------------------------------------------------------------------------------------

Input 1:
5
Output 1:
Sum=15

Input 2:
10
Output 2:
Sum=55

*/
